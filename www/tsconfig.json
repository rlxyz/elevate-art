{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/client/components/*"
      ],
      "@hooks/*": [
        "src/client/hooks/*"
      ],
      "@utils/*": [
        "src/shared/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "src/server/trpc/router/contractDeploymentWhitelist.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}