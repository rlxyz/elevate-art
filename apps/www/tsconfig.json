{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/client/components/*"
      ],
      "@hooks/*": [
        "src/client/hooks/*"
      ],
      "@utils/*": [
        "src/shared/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "node_modules/@elevateart/auth/next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
  ],
  "exclude": [
    "node_modules"
  ]
}
