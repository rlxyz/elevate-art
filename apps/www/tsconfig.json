{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/client/components/*"
      ],
      "@hooks/*": [
        "src/client/hooks/*"
      ],
      "@utils/*": [
        "src/shared/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ]
}